<resources>

    <!--~~~~~~~~~~~~~~~~~~~~ COMMON ~~~~~~~~~~~~~~~~~~~~-->
    <style name="CollectTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~~ TEXT ~~~~~~~~~~~~~~~~~~~~-->
    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <!-- override me -->
        <item name="android:textColor">@color/super_red</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat">
        <!-- override me -->
        <item name="android:textColor">@color/super_red</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ TOOLBAR ~~~~~~~~~~~~~~~~~~~-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/text_title</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

</resources>